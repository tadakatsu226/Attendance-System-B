<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= l(@first_day, format: :middle) %>　時間管理表 
      </td>
      <td>
        指定勤務開始時間：<%= format_basic_info(@user.designation_duty_start_time) %><br>
        指定勤務終了時間：<%= format_basic_info(@user.designation_duty_finish_time) %>
      </td>
      <td colspan="4">基本時間：<%= format_basic_info(@user.basic_time) %></td>
      <td colspan="2">初日：<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名：<%= @user.name %></td>
      <td>コード</td>
      <td><%= @user.employee_number %></td>
      <td colspan="2">出勤日数 : <%= @worked_sum %>日</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>



<div>
  <table class="table table-bordered table-condensed table-striped" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="7">【実績】</th>
        <th colspan="8">所定外勤務</th>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="2">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外時間</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示者確認㊞</th>
      </tr>  
      <tr>
        <th>時</th>
        <th>分</th>
        <td style="width: 10%"></td>
        <th>時</th>
        <th>分</th>
        <th>時</th>
        <th>分</th>
      </tr>  
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td></td>
          <td><%= l(day.worked_on, format: :short) %></td>   
          
          <td>
             <% $days_of_the_week[day.worked_on.wday] %>
             <% if day.worked_on.wday == 6 %>
             <font color="#000"><%= $days_of_the_week[day.worked_on.wday] %></font>
             <% elsif day.worked_on.wday == 0 %>
             <font color="#000"><%= $days_of_the_week[day.worked_on.wday] %></font>
             <% else %>
             <font color="#000"><%= $days_of_the_week[day.worked_on.wday] %></font>
             <% end %>
          </td>    

          <td><%= l(day.started_at, format: :time_hour) if day.started_at.present? %></td>
          
          <td><%= l(day.started_at.floor_to(15.minutes),format: :time_minute) if day.started_at.present? %></td>
          
          <td style="width: 10%" "height: 10%"> </td>

          <td><%= l(day.finished_at, format: :time_hour) if day.finished_at.present? %></td>
          
          <td><%= l(day.finished_at.floor_to(15.minutes),format: :time_minute) if day.finished_at.present? %></td>
          
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at.floor_to(15.minutes), day.finished_at.floor_to(15.minutes)) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          
          <td><%= day.note %></td>

          <td><%= l(day.work_end_time, format: :time_hour) if day.work_end_time.present? %></td>
          
          <td><%= l(day.work_end_time.floor_to(15.minutes),format: :time_minute) if day.work_end_time.present? %></td>
          
          <td>
              <% if day.work_end_time.present? %>
              <%= overtime=over_time(format_basic_info(@user.designation_duty_finish_time).to_datetime, day.work_end_time.to_datetime ) %> 
              <% end %>
          </td>
          
          <td><%= day.job_description %></td>

          <td style="width: 15%">
            <% if day.instructor =="1" %>
              <p>上長1: 残業申請中</p>
            <% elsif day.instructor =="2" %>  
              <p>上長2: 残業申請中</p>
            <% end %> 
            <!--<p>上長1: 勤怠編集申請中</p>-->
      <!--      <p>上長1: 勤怠編集承認済</p>-->
            <!--<p>上長1: 勤怠編集否認</p>-->
      <!--      <p>上長1: 残業承認済</p>-->
      <!--      <p>上長1: 残業否認</p>-->
　　　　　　<!--<p>上長2: 勤怠編集申請中</p>-->
      <!--      <p>上長2: 勤怠編集承認済</p>-->
      <!--      <p>上長2: 勤怠編集否認</p>-->
            
      <!--      <p>上長2: 残業承認済</p>-->
      <!--      <p>上長2: 残業否認</p>-->
            
          </td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
        <tr>
          <td></td>
          <td colspan="2"></td>
          <td colspan="5"></td>
          <td><%= format("%.2f", @total_working_times.to_f) %></td>
          <td colspan="5"></td>
          <td></td>
        </tr>
    </tfoot>
  </table>
</div>

