<% provide(:title, 'All Users') %>
 <h1>ユーザー一覧</h1>

<%= form_tag import_users_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "　　CSVインポート　　", class: "btn btn-primary" %>
<% end %>

  <table class="table" id="table-users">
   <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%# if current_user.admin? %>
            <%#= link_to user.name, user %>   
          <%# else %>
            <%= user.name %><br>|
          <%# end %>
          <%# if current_user.admin? && !current_user?(user) %>
            <%= link_to "削除", user, class: "btn btn-md btn-primary", method: :delete,
                data: { confirm: "削除してよろしいですか？" } %>
        </td>
      </tr>
      <tr>
        <td class="active">
          <a class="btn btn-lg btn-primary" data-toggle="collapse" href="#collapseExample<%= user.id %>" role="button" aria-expanded="false" aria-controls="collapseExample">編集</a>
          
          <div class="collapse" id="collapseExample<%= user.id %>">
             <div class="card card-body">
                <%= render partial: 'user', locals: {user: user} %>
             </div>
          </div> 
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
