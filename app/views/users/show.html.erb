<div class="btn-users-show">
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
  <%= link_to "CSV 出力", csv_output_user_attendance_path(@user.attendances, format: :csv), class: "btn btn-primary" %><br>
  <div class="col-md-2 col-xs-3">
  <%= link_to "勤怠修正ログ (承認済)", "#" , class: "btn btn-block btn-primary" %>
  </div>
</div>

<div>
  <table class="table table-bordered table-condensed table-striped" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="7">【実績】</th>
        <th colspan="8">所定外勤務</th>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="2">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外時間</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示者確認㊞</th>
      </tr>  
      <tr>
        <th>時</th>
        <th>分</th>
        <td style="width: 10%"></td>
        <th>時</th>
        <th>分</th>
        <th>時</th>
        <th>分</th>
      </tr>  
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= link_to "残業承認", edit_overtime_request_user_attendance_path(@user, day), remote: true, class: "btn btn-primary" %></td>
          <td><%= l(day.worked_on, format: :short) %></td>   
          
          <td>
             <% $days_of_the_week[day.worked_on.wday] %>
             <% if day.worked_on.wday == 6 %>
             <font color="#00f"><%= $days_of_the_week[day.worked_on.wday] %></font>
             <% elsif day.worked_on.wday == 0 %>
             <font color="#f00"><%= $days_of_the_week[day.worked_on.wday] %></font>
             <% else %>
             <font color="#000"><%= $days_of_the_week[day.worked_on.wday] %></font>
             <% end %>
          </td>    

          <td><%= l(day.started_at, format: :time_hour) if day.started_at.present? %></td>
          <td><%= l(day.started_at.floor_to(15.minutes),format: :time_minute) if day.started_at.present? %></td>
          <td style="width: 10%" "height: 10%">
          　<% if btn_text = attendance_state(day) %>
          　<%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-block btn-sm btn-primary btn-attendance" %>
   　　　  　　 <% end %>
          </td>
          <td><%= l(day.finished_at, format: :time_hour) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at.floor_to(15.minutes),format: :time_minute) if day.finished_at.present? %></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at.floor_to(15.minutes), day.finished_at.floor_to(15.minutes)) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          
          
          <td><%= l(day.work_end_time, format: :time_hour) if day.work_end_time.present? %></td>
          <td><%= l(day.work_end_time.floor_to(15.minutes),format: :time_minute) if day.work_end_time.present? %></td>
          
          
          
          <td>
              <% if day.work_end_time.present? %>
              <%= over_time(format_basic_info(@user.designation_duty_finish_time).to_datetime, (day.work_end_time).to_datetime) %> 
              <% end %>
          </td>
          
          <td><%= day.job_description %></td>
          
          
          
          <td style="width: 15%">
            <% if day.instructor =="1" %>
              <p>上長1: 残業申請中</p>
            <% elsif day.instructor =="2" %>  
              <p>上長2: 残業申請中</p>
            <% end %> 
            <% if day.request == "3" %>
              <p>上長1: 残業承認済</p>
            <% elsif day.request =="4"%>
              <p>上長1: 残業否認</p>
            <% end %> 
            
            <!--<p>上長1: 勤怠編集申請中</p>-->
      <!--      <p>上長1: 勤怠編集承認済</p>-->
            <!--<p>上長1: 勤怠編集否認</p>-->
　　　　　　<!--<p>上長2: 勤怠編集申請中</p>-->
      <!--      <p>上長2: 勤怠編集承認済</p>-->
      <!--      <p>上長2: 勤怠編集否認</p>-->
      <!--       <p>上長2: 残業承認済</p>-->
      <!--      <p>上長2: 残業否認</p>-->
            
          </td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
        <tr>
          <td></td>
          <td colspan="2"></td>
          <td colspan="5"></td>
          <td><%= format("%.2f", @total_working_times.to_f) %></td>
          <td colspan="5"></td>
          <td>
           所属長承認　未
            <div class="dropdown">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">　　　　
              <span class="caret"></span>
              </button>
                <div class="dropdown-menu">
                  <li class= "dropdown-item"><%= link_to "上長A", current_user %></li>
                  <li class= "dropdown-item"><%= link_to "上長B", current_user %></li>
                </div>
            </div>
            <div class="Approval">
            <%= link_to "承認", "#", class: "btn btn-block btn-primary" %>
            </div>
          </td>
        </tr>
    </tfoot>
  </table>
</div>

