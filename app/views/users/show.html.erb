
<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <!--<div class="table-btn">-->
        <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-sm btn-primary" %>
        <%= l(@first_day, format: :middle) %>　時間管理表 
        <%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-sm btn-primary" %>
        <!--</div>-->
      </td>
      <td>
        指定勤務開始時間：<%= format_basic_info(@user.work_time) %><br>
        指定勤務終了時間：<%= format_basic_info(@user.work_time) %>
      </td>
      <td colspan="4">基本時間：<%= format_basic_info(@user.basic_time) %></td>
      <!--<td></td>-->
      <td colspan="2">初日：<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名：<%= @user.name %></td>
      <td>コード</td>
      <td>####</td>
      <td colspan="2">出勤日数 : <%= @worked_sum %>日</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class="btn-users-show">
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
  <%= link_to "CSV 出力", "#" , class: "btn btn-primary" %><br>
  <div class="col-md-2">
  <%= link_to "勤怠修正ログ (承認済)", "#" , class: "btn  btn-block btn-primary" %>
  </div>
</div>

<div>
  <table class="table table-bordered table-condensed table-striped" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="7">【実績】</th>
        <th colspan="8">所定外勤務</th>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="2">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外時間</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示者確認㊞</th>
      </tr>  
      <tr>
        <th>時</th>
        <th>分</th>
        <td style="width: 10%"></td>
        <th>時</th>
        <th>分</th>
        <th>時</th>
        <th>分</th>
      </tr>  
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= link_to "残業承認", "#" ,class: "btn btn-primary" %></td>
          <td><%= l(day.worked_on, format: :short) %></td>   
          
          <td>
             <% $days_of_the_week[day.worked_on.wday] %>
             <% if day.worked_on.wday == 6 %>
             <font color="#00f"><%= $days_of_the_week[day.worked_on.wday] %></font>
             <% elsif day.worked_on.wday == 0 %>
             <font color="#f00"><%= $days_of_the_week[day.worked_on.wday] %></font>
             <% else %>
             <font color="#000"><%= $days_of_the_week[day.worked_on.wday] %></font>
             <% end %>
          </td>    

          <td><%= l(day.started_at, format: :time_hour) if day.started_at.present? %></td>
          <td><%= l(day.started_at.floor_to(15.minutes),format: :time_minute) if day.started_at.present? %></td>
          <td style="width: 10%" "height: 10%">
          　<% if btn_text = attendance_state(day) %>
          　<%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-block btn-sm btn-primary btn-attendance" %>
   　　　  　　 <% end %>
          </td>
          <td><%= l(day.finished_at, format: :time_hour) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at.floor_to(15.minutes),format: :time_minute) if day.finished_at.present? %></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at.floor_to(15.minutes), day.finished_at.floor_to(15.minutes)) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
              <%# @total_working_times = @total_working_times.round_to(15.minutes) + str_times.round_to(15.minutes) %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td><%= day.note %></td>
          <td><%= day.note %></td>
          <td><%= day.note %></td>
          <td><%= day.note %></td>
          <td style="width: 10%"><%= day.note %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
  <tr>
    <!--<td colspan="2">累計日数</td>-->
  <!--  <td colspan="2">総合勤務時間</td>-->
  <!--  <td colspan="2">累計在社時間</td>-->
  <!--  <td rowspan="2"></td>-->
  </tr>
  <tr>
    <td></td>
    <td colspan="2"></td>
    <td colspan="5"></td>
    <td><%= format("%.2f", @total_working_times.to_f) %></td>
    <td colspan="5"></td>
    
    
    
    <td>
     所属長承認　未
      <div class="dropdown">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">上長A　　　　<span class="caret"></span>
        </button>
        
          
          <ul class="dropdown-menu">
            <li><%= link_to "上長A", current_user %></li>
          </ul>
      </div>
    </td>
    
    
    
  </tr>
</tfoot>
  </table>
</div>