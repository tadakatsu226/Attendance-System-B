<% provide(:class_text, 'basic-info') %>
<% provide(:button_text, '更新') %>

      <h1 class="modal-title">基本情報の更新</h1>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @user, url: update_basic_info_user_path(@user), local: true, method: :patch) do |f| %>
            <%= render 'shared/error_messages', object: @user %>


            <%= f.label :指定勤務時間, class: "label-#{yield(:class_text)}" %>
            <%= f.time_field :basic_time, class: "form-control" %>
            
            <div class="work-time">
            <%= f.label :基本勤務時間, class: "label-#{yield(:class_text)}" %>
            <%= f.time_field :work_time, class: "form-control" %>
            </div>
            
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
