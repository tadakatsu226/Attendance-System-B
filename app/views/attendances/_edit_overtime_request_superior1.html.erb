<% provide(:class_text, 'overtime-request') %>
<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
       <!--<h2 class="modal-title">【残業申請】</h2>-->
    </div>
    <div class="modal-body">
          <%= form_with(model: @attendance, url: update_overtime_request_superior1_user_attendance_path, local: true, method: :patch) do |f| %>
            <%#= render 'shared/error_messages', object: @user %>
            
              <table class="table table-bordered" id="table-attendances">
                <thead>
                  <p class="overtime-title">【からの残業申請】</p>
                  <tr>
                    <th>日付</th>
                    <th>曜日</th>
                    <th>終了予定時間</th>
                    <th>指定勤務終了時間</th>
                    <th>時間外時間</th>
                    <th>業務処理内容</th>
                    <th>指示者確認㊞</th>
                    <th>変更</th>
                    <th>勤怠を確認する</th>
                  </tr>
                </thead>  
                <tbody>
                  <tr>
                    <td><%#= l(@day, format: :short) %></td>
                    <td><%#= $days_of_the_week[@day.wday] %></td>
                    <td><%= f.time_field :work_end_time, class: "form-control" %></td>
                    <td><%= f.time_field :designated_work_end_time, class: "form-control" %></td>
                    <td><%= f.time_field :overtime, class: "form-control" %></td>
                    <td><%= f.text_field :job_description, :size=>"35" %></td>
                    <td><%= f.select :instructor, [["選択してください"],["なし",1],["申請中",2],["承認",3],["否認",4]]%></td>
                    <td><%= f.check_box :day_after,{class: 'chk'} %></td>
                    <td><%= link_to "確認", "#", class: "btn btn-primary" %></td>
                  </tr>
                </tbody>
              </table>    
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-lg btn-primary btn-#{yield(:class_text)}" %>
            </div>
          <% end %>
    </div>
  </div>
</div>