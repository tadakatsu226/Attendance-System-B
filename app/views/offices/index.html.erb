<h1>拠点一覧</h1>
<table class="table table-striped table-bordered" >
   <thead>
     <tr>
       <th></th>   
       <th></th>
       <th>拠点番号</th>  
       <th>拠点名</th>  
       <th>勤怠種類</th>  
     </tr>
   </thead> 
   <tbody>
       <% @offices.each do |office| %> 
       <tr>
         <td>
            <%= link_to "修正", edit_office_path(office.id), class: 'btn btn-md btn-primary' %>
         </td>
         <td>
            <%= link_to "削除", office_path(office.id), class: "btn btn-md btn-primary", method: :delete,
                data: { confirm: "削除してよろしいですか？" } %>
         </td>
         <td><%= office.office_number %></td>
         <td><%= office.office_name %></td>
         <td><%= office.attendance_type %></td>
       </tr>  
        <% end %>
   </tbody> 
</table>
      <tr>
        <td class="active">
          <a class="btn btn-lg btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">拠点情報追加</a>
          <div class="collapse" id="collapseExample">
             <div class="card card-body">
                <%= render partial: 'office', locals: {office: @office} %>
              </div>
          </div> 
        </td>
      </tr>